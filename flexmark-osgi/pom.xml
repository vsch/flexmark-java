    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>5.1.9</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>!*.internal,!*.test,com.vladsch.flexmark.*</Export-Package>
                        <Private-Package>org.nibor.autolink.*;-split-package:=merge-first</Private-Package>
                        <Embed-Dependency>*;scope=compile;inline=true</Embed-Dependency>
                        <Import-Package>!com.vladsch.flexmark.test,*</Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
